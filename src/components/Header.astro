---
import HeaderLink from '@/components/HeaderLink'
import HomeIcon from '@/components/icons/HomeIcon'
import TwitterIcon from '@/components/icons/TwitterIcon'
import GithubIcon from '@/components/icons/GithubIcon'
import MusicIcon from '@/components/icons/MusicIcon'
import SpotifyIcon from '@/components/icons/SpotifyIcon'
import MenuIcon from '@/components/icons/MenuIcon'
import InstagramIcon from '@/components/icons/InstagramIcon'
import LinkedInIcon from '@/components/icons/LinkedInIcon'
import YouTubeIcon from '@/components/icons/YouTubeIcon'
import CloseIcon from '@/components/icons/CloseIcon'
import ToggleTheme from './ToggleTheme.astro'

// ADD YOUR SOCIAL NETWORKS HERE
const SOCIALNETWORKS = [
	{
		name: 'Github',
		url: 'https://github.com/mrdonado',
		icon: GithubIcon
	},
	{
		name: 'LinkedIn',
		url: 'https://www.linkedin.com/in/f-javier-r-donado',
		icon: LinkedInIcon
	},
	{
		name: 'Twitter',
		url: 'https://x.com/jdonado',
		icon: TwitterIcon
	},
	{
		name: 'Instagram',
		url: 'https://instagram.com/jdonadolens',
		icon: InstagramIcon
	},
	{
		name: 'My Music on Spotify',
		url: 'https://open.spotify.com/artist/60ICs7yKs1yRwW1ZVIJzYV',
		icon: SpotifyIcon
	},
	{
		name: 'YouTube Channel',
		url: 'https://www.youtube.com/@mrdonado',
		icon: YouTubeIcon
	},
	{
		name: 'My Music on Bandcamp',
		url: 'https://jdonado.bandcamp.com',
		icon: MusicIcon,
		hidden: true
	}
]

const { activeCategory } = Astro.props

const currentPath = Astro.url.pathname

const isHome = currentPath === '/' || currentPath === ''
const isApps = currentPath.startsWith('/apps') || activeCategory === 'Labs'
const isPulse =
	(currentPath.startsWith('/pulse') ||
		currentPath.startsWith('/post') ||
		currentPath.startsWith('/category') ||
		currentPath.startsWith('/tags') ||
		currentPath.startsWith('/archive')) &&
	!isApps

const translateClass = 'opacity-0 pointer-events-none scale-95 invisible'
---

<header>
	<div class='mx-auto max-w-6xl px-6 md:px-8 lg:px-10 flex items-center py-4 md:py-2 font-light'>
		<a class='text-lg mr-5' href='/' aria-label='Home' id='nav-home'>
			<HomeIcon filled={isHome} />
		</a>
		<a class={`text-lg mr-5 ${isPulse ? 'font-bold' : ''}`} href='/pulse' id='nav-pulse'>Pulse</a>
		<a class={`text-lg mr-auto ${isApps ? 'font-bold' : ''}`} href='/apps' id='nav-apps'
			>Apps & More</a
		>

		<nav
			id='astro-header-drawer'
			class={`fixed inset-0 min-h-screen w-screen bg-white/95 dark:bg-[#0a0910]/95 z-50 flex flex-col items-center justify-center transition-all duration-300 ease-in-out md:static md:min-h-0 md:w-auto md:bg-transparent md:dark:bg-transparent md:flex-row md:justify-end md:opacity-100 md:pointer-events-auto md:scale-100 md:visible ${translateClass}`}
		>
			<button
				id='astro-header-drawer-close'
				type='button'
				class='absolute top-6 right-6 md:hidden cursor-pointer'
				aria-label='Close Menu'
			>
				<CloseIcon />
			</button>

			<div class='grid grid-cols-3 gap-8 md:flex md:gap-3'>
				{
					SOCIALNETWORKS.filter((network) => !network.hidden).map((network) => (
						<HeaderLink
							class='flex items-center justify-center p-3 hover:bg-gray-100/30 dark:hover:bg-gray-800/30 rounded-lg transition-colors scale-125 md:scale-100'
							href={network.url}
							target='_blank'
							aria-label={network.name}
						>
							<span class='flex items-center justify-center'>{<network.icon />}</span>
						</HeaderLink>
					))
				}
			</div>
		</nav>

		<div class='flex items-center gap-3 md:pl-3' transition:persist='navbar'>
			<button
				id='astro-header-drawer-button'
				type='button'
				class='md:ml-6 md:hidden cursor-pointer'
				data-translate-class={translateClass}
			>
				<MenuIcon />
				<span class='sr-only'>Show Menu</span>
			</button>
			<ToggleTheme />
		</div>
	</div>
</header>

<script>
	document.addEventListener('click', (event) => {
		const drawer = document.getElementById('astro-header-drawer')
		const btn = document.getElementById('astro-header-drawer-button')
		const closeBtn = document.getElementById('astro-header-drawer-close')
		const classes = (btn?.dataset.translateClass || '').split(' ').filter(Boolean)

		if (
			btn?.contains(event.target as Node) ||
			closeBtn?.contains(event.target as Node) ||
			event.target === drawer
		) {
			classes.forEach((cls) => drawer?.classList.toggle(cls))
		}
	})
</script>
