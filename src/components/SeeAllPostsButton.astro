---
type Props = {
	href?: string
	text?: string
	class?: string
}

const { href = '/archive', text = 'See all posts', class: className = '' } = Astro.props
---

<div class={`flex justify-center mt-8 ${className}`}>
	<a
		href={href}
		aria-label={text}
		class='flex items-center justify-center px-6 py-3 text-base font-medium text-black bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-transparent dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white transition-colors duration-200'
	>
		{text}
	</a>
</div>
