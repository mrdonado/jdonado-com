---
import { getCategories } from '@/utils'
import Category from '@/components/Category'

const categories = await getCategories()

const { activeCategory } = Astro.props
---

<div class='relative flex flex-wrap min-w-full gap-5'>
	<Category />
	{
		categories.map((category: string) => (
			<Category name={category} activeCategory={activeCategory} />
		))
	}
	<Category name='Tags' />
	<Category name='Archive' />

	<a
		class='flex items-center gap-1 text-gray-600 dark:text-gray-300 pb-2.5 first-letter:uppercase font-medium hover:text-gray-800 border-b-2 border-opacity-0 dark:border-opacity-0 border-black dark:border-white'
		href='/category/tags'
	>
	</a>
</div>
