---
import ListCategories from '@/components/ListCategories'
import ListItems from '@/components/ListItems'
import TitlePage from '@/components/TitlePage'
import SeeAllPostsButton from '@/components/SeeAllPostsButton'
import BaseLayout from '@/layouts/BaseLayout'
import { getPosts } from '@/utils'

const MAX_POSTS = 5 // max number of posts to show on the home page
// Music category is not shown on the home page
const posts = await getPosts(MAX_POSTS, (post) => post.data.category !== 'Music')
---

<BaseLayout title='Pulse: The Feed'>
	<TitlePage title='Pulse: The Feed' />
	<ListCategories />
	<ListItems FirstBig={true} items={posts} />
	<SeeAllPostsButton />
</BaseLayout>
