---
import ListItems from '@/components/ListItems'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import SeeAllPostsButton from '@/components/SeeAllPostsButton'
import { getApps, getPosts } from '@/utils'

const apps = await getApps()
const projects = await getPosts(undefined, (post) => post.data.category === 'Labs')
const items = [...apps, ...projects]
---

<BaseLayout title='Apps & More'>
	<TitlePage title='Apps & More' />
	<ListItems FirstBig={true} items={items} />
	<SeeAllPostsButton />
</BaseLayout>
