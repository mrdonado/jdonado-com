---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import ProviderTheme from '@/components/ProviderTheme'
import ProviderAnimations from '@/components/ProviderAnimations'
import TwSizeIndicator from '@/components/TwSizeIndicator'
import CookieConsent from '@/components/CookieConsent'
import { siteConfig } from '@/data/site.config'

declare global {
	interface Window {
		dataLayer: Record<string, any>[]
		gtag: (...args: any[]) => void
	}
}

const { title, description, image, articleDate, activeCategory } = Astro.props
const gtmId = siteConfig.gtmId
---

<html lang='en' class='scroll-smooth'>
	<head>
		<style type='text/css'>
			.fouc-fix {
				display: none;
			}
		</style>
		<script type='text/javascript'>
			try {
				const elm = document.getElementsByTagName('html')[0]
				const old = elm.class || ''
				elm.class = old + ' fouc-fix'
				document.addEventListener('DOMContentLoaded', function (event) {
					elm.class = old
				})
			} catch (thr) {}
		</script>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
		<ProviderTheme />
		<ProviderAnimations />
	</head>

	<body class='bg-white text-stone-950 dark:bg-[#0a0910] dark:text-white'>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src=`https://www.googletagmanager.com/ns.html?id=${gtmId}`
				height='0'
				width='0'
				style='display:none;visibility:hidden'></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->
		<div
			transition:animate='none'
			class='sticky top-0 z-50 w-full backdrop-blur-md bg-white/70 dark:bg-[#0a0910]/70 border-b border-transparent transition-colors duration-300'
		>
			<Header activeCategory={activeCategory} />
		</div>
		<main
			id='main-content'
			data-category={activeCategory}
			class='mx-auto max-w-6xl px-6 md:px-8 lg:px-10 antialiased mt-1 overflow-visible min-h-[85vh] mb-16'
		>
			<slot />
		</main>
		<div class='px-5 sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 md:max-w-6xl'>
			<Footer />
		</div>
		<TwSizeIndicator />
		<style>
			body {
				margin-left: calc(100vw - 100%); /* prevent layout shift */
			}
		</style>

		<CookieConsent />
	</body>
</html>
