---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import ProviderTheme from '@/components/ProviderTheme'
import ProviderAnimations from '@/components/ProviderAnimations'
import TwSizeIndicator from '@/components/TwSizeIndicator'
import CookieConsent from '@/components/CookieConsent'
import { siteConfig } from '@/data/site.config'
import { ClientRouter, fade } from 'astro:transitions'

const { title, description, image, articleDate } = Astro.props
const gtmId = siteConfig.gtmId

const anim = {
	old: {
		name: 'fade-out-anim',
		duration: '0.1s'
	},
	new: {
		name: 'fade-in-anim',
		duration: '0.2s',
		easing: 'ease-in'
	}
}

const customTransition = {
	forwards: anim,
	backwards: anim
}
---

<html lang='en'>
	<head>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
		<ProviderTheme />
		<ProviderAnimations />
		<ClientRouter />
	</head>

	<body class='bg-white text-stone-950 dark:bg-[#0a0910] dark:text-white mx-5'>
		<!-- GTM -->
		<noscript
			><iframe
				src=`https://www.googletagmanager.com/ns.html?id=${gtmId}`
				height='0'
				width='0'
				style='display:none;visibility:hidden'></iframe></noscript
		>

		<main
			class='px-5 sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 antialiased md:max-w-6xl grid gap-12 mt-4 overflow-hidden md:overflow-visible'
		>
			<Header />
			<div transition:animate={customTransition}>
				<slot />
			</div>
			<Footer />
		</main>
		<TwSizeIndicator />
		<style>
			body {
				margin-left: calc(100vw - 100%); /* prevent layout shift */
			}
		</style>
		<CookieConsent />
	</body>
</html>

<style is:global>
	@keyframes fade-out-anim {
		0% {
			opacity: 1;
		}
		100% {
			opacity: 0;
		}
	}
	@keyframes fade-in-anim {
		0% {
			opacity: 0.4;
		}
		100% {
			opacity: 1;
		}
	}
</style>
